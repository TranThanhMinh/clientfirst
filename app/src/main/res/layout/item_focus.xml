<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingLeft="10dp">


            <ImageView
                android:id="@+id/imageCheck"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:padding="5dp" />

            <anhpha.clientfirst.crm.swipe.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/swipe_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dragEdge="right"
                app:mode="normal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp">

                    <TextView
                        android:id="@+id/tvOk"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorBlue"
                        android:gravity="center"
                        android:text="@string/srtAchieved"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/tvNoOk"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorOrange"
                        android:gravity="center"
                        android:text="@string/srtNoAchieved"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/tvDelete"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorRed"
                        android:gravity="center"
                        android:text="@string/srtDelete"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relTop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/client_name"
                            android:layout_alignStart="@+id/client_name"
                            android:layout_marginTop="5dp"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:padding="2dp"
                            android:visibility="visible"></LinearLayout>

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/color" />

                        <LinearLayout
                            android:id="@+id/linCenter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linearLayout2"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvName_city"
                                android:layout_width="342dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linCenter"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvNote"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:textSize="10sp" />

                            <LinearLayout
                                android:id="@+id/linearLayout5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageOrder"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@mipmap/ic_crm_29"
                                    android:padding="4dp"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/imageMeeting"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="4dp"
                                    android:src="@mipmap/ic_crm_99"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/imageCall"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="4dp"
                                    android:src="@mipmap/ic_crm_28"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/imageEmail"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@mipmap/ic_crm_58"
                                    android:padding="4dp"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/imageEvent"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@mipmap/ic_crm_31"
                                    android:padding="4dp"
                                    android:visibility="gone" />
                                />
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/layout_round_gray_client"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:visibility="gone">

                            <ImageButton
                                android:id="@+id/imageButton2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="3dp"
                                android:background="@color/gray"
                                android:clickable="true"
                                android:padding="5dp"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_crm_29" />

                            <ImageButton
                                android:id="@+id/imageButton3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:background="@color/gray"
                                android:clickable="true"
                                android:padding="5dp"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_crm_32" />

                            <ImageButton
                                android:id="@+id/imageButton4"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:background="@color/gray"
                                android:clickable="true"
                                android:padding="5dp"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_crm_99" />

                            <ImageButton
                                android:id="@+id/imageButton5"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:background="@color/gray"
                                android:clickable="true"
                                android:padding="5dp"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_crm_28" />

                            <ImageButton
                                android:id="@+id/imageButton6"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:background="@color/gray"
                                android:clickable="true"
                                android:padding="5dp"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_crm_58" />

                            <ImageButton
                                android:id="@+id/imageButton7"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:background="@color/gray"
                                android:clickable="true"
                                android:padding="5dp"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_crm_31" />

                            <ImageButton
                                android:id="@+id/imageButton8"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="5dp"
                                android:background="@color/gray"
                                android:clickable="true"
                                android:padding="5dp"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_crm_34" />

                            <ImageButton
                                android:id="@+id/imageButton9"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="5dp"
                                android:background="@color/gray"
                                android:clickable="true"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_crm_101"
                                android:visibility="gone" />
                        </LinearLayout>


                    </RelativeLayout>


                </RelativeLayout>
            </anhpha.clientfirst.crm.swipe.SwipeRevealLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/color1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/color1" />
</LinearLayout>