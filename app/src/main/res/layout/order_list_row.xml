<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/layout_round_gray"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="#345343"
        android:id="@+id/tvOrderCode"
        android:paddingBottom="14dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/layout_round"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="..."
        android:paddingLeft="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:id="@+id/tvClientName"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_normal"
        android:background="@color/gray"
        android:layout_marginTop="-14dp"
        android:layout_alignLeft="@+id/tvOrderCode"
        android:layout_alignStart="@+id/tvOrderCode"
        android:layout_alignRight="@+id/tvOrderCode"
        android:layout_alignEnd="@+id/tvOrderCode"
        android:layout_below="@+id/tvOrderCode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:paddingLeft="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:id="@+id/tvAmount"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_normal"
        android:background="@color/gray"
        android:layout_below="@+id/tvClientName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="..."
        android:id="@+id/tvStatus"
        android:paddingLeft="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/tvAmount"
        android:layout_alignRight="@+id/tvAmount"
        android:layout_alignEnd="@+id/tvAmount" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="..."
        android:id="@+id/tvTime"
        android:paddingLeft="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/tvStatus"
        android:layout_alignLeft="@+id/tvStatus"
        android:layout_alignStart="@+id/tvStatus" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="..."
        android:id="@+id/tvUser"
        android:paddingLeft="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/tvTime"
        android:layout_alignLeft="@+id/tvTime"
        android:layout_alignStart="@+id/tvTime" />


</RelativeLayout>